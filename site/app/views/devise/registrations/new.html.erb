
<%= render 'common/header' %>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
</head>
<body>
<%= render 'common/navbar' %>

<div class="container">


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class=" panel-group col-lg-6 col-md-6 col-sm-6 col-xs-12  col-md-offset-3">

  <%= f.error_notification %>

  <h2>Sign up</h2>

  <div class="form-inputs">
    <%= f.input :email, required:true %>
    <%= f.input :password, required:true, hint: ("#{@minimum_password_length} caracteres no minimo" if @minimum_password_length) %>
    <%= f.input :password_confirmation, :label => "Confirmação da password" , required:true %>
    <%= f.input :entidade, required:true, autofocus:true %>
    <%= f.input :nif, :label => "NIF" , required:true %>
    <%= f.input :morada, :label => "Morada", required:true %>
    <%= f.input :codigo, :label => "Código Postal", required:true %>
    <%= f.input :localidade, :label => "Localidade", required:true %>

      <div class="form-actions">
    <%= f.button :submit, "Registar" %> 
    </div>

    <div>
    <%= render "devise/shared/links" %>
    </div>

  </div>

  </div>
  </div>



<% end %>

  

</div>
