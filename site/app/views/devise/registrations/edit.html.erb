
<%= render 'common/header' %>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
</head>
<body>
<%= render 'common/navbar' %>

<div class="container">



  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>


  <div class=" panel-group col-lg-6 col-md-6 col-sm-6 col-xs-12  col-md-offset-3">

  <h3> Editar detalhes de conta</h3>

  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :nome, required: true, autofocus: true %>
    <%= f.input :email, required: true %>

    <%= f.input :password, autocomplete: 'off', hint: 'Deixar em branco se nao pretender alterar a password', required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: 'É preciso a sua password actual para poder alterá-la', required: true %>

    <%= f.input :nif, :label => "NIF" %>
    <%= f.input :morada, :label => "Morada" %>
    <%= f.input :codigo, :label => "Código Postal" %>
    <%= f.input :localidade, :label => "Localidade" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Atualizar' %>
  </div>

  <% end %>

 
  <h3> Cancelar esta conta </h3>

  <p> <%= link_to 'Clique aqui para cancelar esta conta', registration_path(resource_name), data: { confirm: 'Tem a certeza que quer cancelar a conta?' }, method: :delete  %>
  </p>

<%= link_to "Back", :back %>
 

</div>