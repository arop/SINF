<div id="review-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Criar review</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <textarea class="form-control" rows="5" id="review-input"></textarea>
                </div>
                <div>
                    <input id="rating-system" type="number" class="rating" min="1" max="5" step="1">
                </div>
            </div>
            <div class="modal-footer">
                <button id="btn-submit-review" type="button" class="btn btn-warning" data-dismiss="modal">Submeter review</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>